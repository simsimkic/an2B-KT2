<Window x:Class="InitialProject.WPF.View.GuideMenuBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InitialProject.WPF.View"
        mc:Ignorable="d"
        Title="GuideMenuBar" Height="750" Width="430">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Command="{Binding MainPageCommand}" Content="Main page"/>
        <Button Grid.Row="1" Command="{Binding UpcomingToursCommand}" Content="Upcoming tours"/>
        <Button Grid.Row="2" Command="{Binding CreateTourCommand}" Content="Create tour"/>
        <Button Grid.Row="3" Command="{Binding TourTrackingCommand}" Content="Tour tracking"/>
        <Button Grid.Row="4" Command="{Binding MostVisitedCommand}" Content="The most visited"/>
        <Button Grid.Row="5" Command="{Binding FinishedToursCommand}" Content="View tour statistics"/>

    </Grid>
</Window>
